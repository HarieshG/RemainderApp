<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".completedstatus">

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginBottom="8dp"
        android:background="#00A72C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="231dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cstatushead"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/montserrat_bold"

            android:gravity="center"
            android:text="Market"
            android:textColor="#FFFF"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/cstatushead"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/undraw_finish_line_katerina_limpitsouni_xy20" />

        <TextView
            android:id="@+id/cdesstatus"
            android:layout_width="match_parent"
            android:layout_height="63dp"

            android:layout_below="@+id/imageView5"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/montserrat"
            android:text="Us the slkv aslkbj asdkv alskdjvkasjv lerhihjdlknvf;oierj"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:textStyle="italic" />

        <View
            android:id="@+id/juuu"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/cdesstatus"
            android:layout_marginTop="16dp"
            android:background="@drawable/view2" />

        <TextView
            android:layout_width="314dp"
            android:layout_height="44dp"
            android:layout_alignStart="@+id/juuu"
            android:layout_alignLeft="@+id/juuu"
            android:layout_alignTop="@+id/juuu"
            android:layout_alignEnd="@+id/juuu"
            android:layout_alignRight="@+id/juuu"
            android:layout_alignBottom="@+id/juuu"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Status : Completed"
            android:textColor="#4CAF50"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="232dp"
        android:layout_marginTop="499dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/cdeletebutton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="124dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="137dp"
            android:layout_marginRight="137dp"
            android:background="@drawable/bluebutton"
            android:text="Delete"
            android:textColor="#FFFF"
            android:textSize="20dp" />

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>